@model PostCreateViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h3 class="mb-0">Yeni Post Oluştur</h3>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control shadow-sm" placeholder="Post başlığı giriniz">
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <input asp-for="Description" class="form-control shadow-sm" placeholder="Kısa açıklama giriniz">
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Url" class="form-label fw-bold"></label>
                            <input asp-for="Url" class="form-control shadow-sm" placeholder="Geçerli bir URL giriniz">
                            <span asp-validation-for="Url" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold"></label>
                            <textarea asp-for="Content" class="form-control shadow-sm" rows="6" placeholder="Post içeriğini giriniz"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Yayında mı?</label>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-plus-circle me-2"></i>Post Oluştur
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

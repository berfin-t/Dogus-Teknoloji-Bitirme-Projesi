@using System.Security.Claims

@model BlogApp.Dtos.UserDtos.UserDto

@{
    ViewData["Title"] = "Kullanıcı Bilgilerini Güncelle";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Berfin Tek - Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        input[type="file"] {
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 4px;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .card-header {
            background-color: #007bff;
            font-size: 18px;
            text-align: center;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Edit Formu -->
            <div class="col-md-8">
                <div class="card shadow-sm rounded-4">
                    <div class="card-header bg-primary text-white rounded-top-4">
                        <h5 class="mb-0">Kullanıcı Bilgilerini Güncelle</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="Id" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label">Ad</label>
                                <input name="FirstName" class="form-control" value="@Model.FirstName" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Soyad</label>
                                <input name="LastName" class="form-control" value="@Model.LastName" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Kullanıcı Adı</label>
                                <input name="UserName" class="form-control" value="@Model.UserName" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input name="Email" type="email" class="form-control" value="@Model.Email" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Profil Resmi</label>
                                <input type="file" name="ProfileImage" class="form-control" accept="image/*" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Durum</label>
                                <select name="IsDeleted" class="form-select">
                                    <option value="false" selected="@(!Model.IsDeleted)">Aktif</option>
                                    <option value="true" selected="@Model.IsDeleted">Silinmiş</option>
                                </select>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Detail", "Users", new { id = User.FindFirstValue(ClaimTypes.NameIdentifier) })" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i> Geri Dön
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-save me-1"></i> Bilgileri Güncelle
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
